{
  "compilerOptions": {
    "composite": true,

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },

    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
